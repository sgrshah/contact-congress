<%=form_for @letter, url: wizard_path do |f|%>
	<%= f.label :name %>
	<%= f.text_field :name%><br>
	<%= f.label :email %>
	<%= f.email_field :email%><br>
	<%= f.label :telephone %>
	<%= f.telephone_field :telephone%><br>
	<%= f.label :street %>
	<%= f.text_field :street%><br>
	<%= f.label :apartment %>
	<%= f.text_field :apartment%><br>
	<%= f.label :state %>
	<%= f.text_field :state%><br>
	<%= f.submit "Next, and final step - the content!" %>
<% end %>