<div class="col-md-6">
	<%=form_for @letter, url: wizard_path do |f|%>
		<div class="form-group">
			<%= f.label :name %><br>
			<%= f.text_field :name, class: "form-control"%>
		</div>
		<div class="form-group">
			<%= f.label :email %><br>
			<%= f.email_field :email, class: "form-control"%>
		</div>
		<div class="form-group">
			<%= f.label :telephone%><br>
			<%= f.telephone_field :telephone, class: "form-control"%>
		</div>
		<div class="form-group">
			<%= f.label :street %><br>
			<%= f.text_field :street, class: "form-control"%>
		</div>
		<div class="form-group">
			<%= f.label :apartment %><br>
			<%= f.text_field :apartment, class: "form-control"%>
		</div>
		<div class="form-group">
			<%= f.label :state %><br>
			<%= f.text_field :state, class: "form-control"%>
		</div>
		<%= f.submit "Next, and final step - the content!", class: "btn btn-default" %>
	<% end %>
</div>