<%= form_for @letter, url: wizard_path do |f| %>

	<%=f.label :issue_ids, "Select issues that apply"%>
	<br>
	<%=f.select(:issue_ids, Issue.all.collect{|i| [i.title,i.id]}, {}, {multiple: true})%>
	<br>
	<br>
	<%=f.label :zip_code %>
	<br>
	<%=f.text_field :zip_code%>
	<br>
	<br>

	<%= f.submit "Find your congressman" %>
<% end %>